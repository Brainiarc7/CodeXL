R"(
//*************************************************************************************************
// FsQuadToBuffer.vert
//*************************************************************************************************
#version 430

layout (location = 0) out vec4 texCoords;

out gl_PerVertex
{
    vec4 gl_Position;
};

//*************************************************************************************************
// Vertex Shader
//
// Ouputs a full screen quad with tex coords.
//*************************************************************************************************
void main()
{
    texCoords = vec4((gl_VertexIndex << 1) & 2, gl_VertexIndex & 2, 0, 0);
    gl_Position = vec4(texCoords.xy * vec2(2.0f, -2.0f) + vec2(-1.0f, 1.0f), 0.0f, 1.0f);
}

)"